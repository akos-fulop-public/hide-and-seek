{
	"version": 8,
	"glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
	"sources": {
		"vienna-districts": {
			"type": "geojson",
			"data": "data/districts.geojson"
		},
		"vienna-waters": {
			"type": "geojson",
			"data": "data/water.geojson"
		},
		"vienna-ubahn": {
			"type": "geojson",
			"data": "data/metro.geojson"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "#ffffff"
			}
		},
		{
			"id": "water",
			"type": "fill",
			"source": "vienna-waters",
			"paint": {
				"fill-color": "#c9f5ff"
			}
		},
		{
			"id": "district-outlines",
			"type": "line",
			"source": "vienna-districts",
			"paint": {
				"line-color": "#aaaaaa",
				"line-width": 1
			}
		},
		{
			"id": "metro-stations",
			"type": "circle",
			"source": "vienna-ubahn",
			"filter": [
				"has",
				"HTXT"
			],
			"paint": {
				"circle-radius": 4,
				"circle-color": [
					"match",
					[
						"get",
						"LINFO"
					],
					1,
					"#d6001c",
					2,
					"#6f2da8",
					3,
					"#f28c00",
					4,
					"#2e7d32",
					6,
					"#8b5a2b",
					"#000000"
				],
				"circle-opacity": 1.0
			}
		},
		{
			"id": "ubahn-station-radius-500m",
			"type": "circle",
			"source": "vienna-ubahn",
			"filter": [
				"has",
				"HTXT"
			],
			"paint": {
				"circle-radius": [
					"interpolate",
					[
						"linear"
					],
					[
						"zoom"
					],
					11,
					15,
					12,
					30,
					13,
					60,
					14,
					120,
					15,
					240,
					16,
					480
				],
				"circle-color": "rgba(0,0,0,0)",
				"circle-stroke-color": "#cccccc",
				"circle-stroke-width": 1
			}
		}
	]
}
