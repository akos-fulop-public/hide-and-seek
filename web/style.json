{
	"version": 8,
	"glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
	"sources": {
		"vienna-districts": {
			"type": "geojson",
			"data": "data/districts.geojson"
		},
		"vienna-waters": {
			"type": "geojson",
			"data": "data/water.geojson"
		},
		"vienna-transport": {
			"type": "geojson",
			"data": "data/transport.geojson"
		},
		"vienna-museums": {
			"type": "geojson",
			"data": "data/museums.geojson"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "#ffffff"
			}
		},
		{
			"id": "water",
			"type": "fill",
			"source": "vienna-waters",
			"paint": {
				"fill-color": "#c9f5ff"
			}
		},
		{
			"id": "district-outlines",
			"type": "line",
			"source": "vienna-districts",
			"paint": {
				"line-color": "#aaaaaa",
				"line-width": 1
			}
		},
		{
			"id": "stations",
			"type": "circle",
			"source": "vienna-transport",
			"filter": [
				"has",
				"HTXT"
			],
			"paint": {
				"circle-radius": [
					"interpolate",
					[
						"exponential",
						2
					],
					[
						"zoom"
					],
					11,
					3,
					16,
					5
				],
				"circle-color": [
					"match",
					[
						"get",
						"LINFO"
					],
					1,
					"#d6001c",
					2,
					"#6f2da8",
					3,
					"#f28c00",
					4,
					"#2e7d32",
					6,
					"#8b5a2b",
					45,
					"#a6d609",
					1234,
					"#e75480",
					"#000000"
				],
				"circle-opacity": 1.0
			}
		},
		{
			"id": "hiding-zones",
			"type": "circle",
			"source": "vienna-transport",
			"filter": [
				"has",
				"HTXT"
			],
			"paint": {
				"circle-radius": [
					"interpolate",
					[
						"exponential",
						2
					],
					[
						"zoom"
					],
					11,
					20,
					16,
					600
				],
				"circle-color": "rgba(0,0,0,0)",
				"circle-stroke-color": "#cccccc",
				"circle-stroke-width": 1
			}
		},
		{
			"id": "lines",
			"type": "line",
			"source": "vienna-transport",
			"filter": [
				"!",
				[
					"has",
					"HTXT"
				]
			],
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"paint": {
				"line-width": 1,
				"line-color": [
					"match",
					[
						"get",
						"LINFO"
					],
					1,
					"#d6001c",
					2,
					"#6f2da8",
					3,
					"#f28c00",
					4,
					"#2e7d32",
					6,
					"#8b5a2b",
					45,
					"#a6d609",
					1234,
					"#e75480",
					"#000000"
				]
			}
		}
	]
}
